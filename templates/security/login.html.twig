{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}




{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

  <img class="logo" src=" {{asset('build/images/lock.gif')}}">

<form id='login' action="{{ path("fos_user_security_check") }}" method="post">


    <label for="username">{{ 'username'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label for="password">{{ 'password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    <input type="hidden" name="_csrf_token"
      value="{{ csrf_token('authenticate') }}"
  >
  <span>
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'se souvenir de moi'|trans }}</label>
  </span>

      <input type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />

</form>
{% endblock body %}
